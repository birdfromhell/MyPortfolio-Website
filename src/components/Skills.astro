---
import { fetchData } from '../utils/api';

// Define the TypeScript interfaces for the API response
interface Skill {
  id: number;
  name: string;
}

interface SkillCategory {
  id: number;
  name: string;
  description: string;
  skills: Skill[];
}

// Default skill data as fallback
const defaultSkillCategories: SkillCategory[] = [
  {
    id: 1,
    name: "language",
    description: "",
    skills: [
      { id: 1, name: "Javascript" },
      { id: 2, name: "TypeScript" },
      { id: 3, name: "Python" },
      { id: 4, name: "Rust" },
      { id: 5, name: "Go" }
    ]
  },
  {
    id: 2,
    name: "vue",
    description: "",
    skills: [
      { id: 6, name: "Vue 2/3" },
      { id: 7, name: "Vuex" },
      { id: 8, name: "Vue Router" },
      { id: 9, name: "Nuxt.js" },
      { id: 10, name: "Vitepress" }
    ]
  },
  // Add more default categories as needed
];

// Fetch skills data from API
const skillCategories = await fetchData('skills', defaultSkillCategories);
---

<div class="mt-4" id="hero-skills">
    <h2 class="text-2xl font-semibold mb-6">Technologies & Skills</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {skillCategories.map((category) => (
            <div class="p-4 rounded-lg">
                <h3 class="text-lg font-medium text-primary capitalize mb-3">{category.name}</h3>
                <div class="flex flex-wrap gap-2">
                    {category.skills.map(skill => (
                        <span class="px-3 py-1 bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-full text-sm">{skill.name}</span>
                    ))}
                </div>
            </div>
        ))}
    </div>
</div>