---
// Click button, get confetti!
// Styled by Tailwind :)
---

<button
  id="confetti-button"
  class="ml-4 appearance-none py-2 px-4 bg-purple-500 text-white font-semibold rounded-lg shadow-md hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-400 focus:ring-opacity-75"
>
  <slot />
</button>

<script>
  import confetti from 'canvas-confetti'
  const button = document.body.querySelector('#confetti-button')

  if (button) {
    button.addEventListener('click', () => {
      window.open("https://drive.google.com/file/d/1Dl-s1_Aq4bRQ5QT-fvuLHe1Eo9KXiiPW/view")
      confetti({
        particleCount: 100,
        spread: 70,
        origin: { y: 0.6 },
      })
    })
  }
</script>
