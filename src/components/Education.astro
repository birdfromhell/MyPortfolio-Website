---
// Fetch education data from API
let education = [];

try {
  const response = await fetch('http://127.0.0.1:5000/api/education');
  
  if (!response.ok) {
    throw new Error(`API request failed with status ${response.status}`);
  }
  
  education = await response.json();
  
  // Handle the case where the API response might not be an array
  if (!Array.isArray(education)) {
    console.error('API response is not an array:', education);
    education = [];
  }
} catch (error) {
  console.error('Error fetching education data:', error);
  // Fallback to default data if API fails
  education = [
    {
      degree: "Bachelor of Science",
      field: "Computer Science",
      institution: "Fuzhou University",
      period: "2018 - 2022"
    }
  ];
}
---

<section class="py-20" id="education">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-left mb-12">Education</h2>
    
    <div class="relative space-y-8">
      {education.map((edu) => (
        <div class="education-item flex gap-8">
          <div class="w-32 flex-shrink-0 text-sm text-gray-500 dark:text-gray-400">
            {edu.period}
          </div>
          <div class="flex-1">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white">{edu.degree}</h3>
            <p class="text-primary font-medium">{edu.field || edu.description}</p>
            <p class="mt-2 text-gray-700 dark:text-gray-300">{edu.institution}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener('DOMContentLoaded', () => {
    const items = document.querySelectorAll('.education-item');
    
    // Set initial state
    gsap.set(items, {
      opacity: 0,
      y: 50
    });
    
    items.forEach((item, index) => {
      gsap.to(item, {
        scrollTrigger: {
          trigger: item,
          start: "top bottom-=100",
          toggleActions: "play none none reverse"
        },
        opacity: 1,
        y: 0,
        duration: 1,
        ease: "power3.out"
      });
    });
  });
</script>