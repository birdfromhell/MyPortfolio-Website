<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  const contactSection = document.querySelector('#contact');
  const contactTitle = document.querySelector('#contact-title');
  const contactCards = document.querySelectorAll('#contact .flex.items-center.space-x-4');

  gsap.set([contactTitle, contactCards], { 
    opacity: 0,
    y: 50 
  });

  ScrollTrigger.batch([contactTitle, ...contactCards], {
    start: "top 80%",
    onEnter: (elements) => {
      gsap.to(elements, {
        opacity: 1,
        y: 0,
        stagger: 0.15,
        duration: 0.8,
        ease: "power2.out"
      });
    },
    onLeave: (elements) => {
      gsap.to(elements, {
        opacity: 0,
        y: -50,
        stagger: 0.15,
        duration: 0.8
      });
    },
    onEnterBack: (elements) => {
      gsap.to(elements, {
        opacity: 1,
        y: 0,
        stagger: -0.15,
        duration: 0.8
      });
    },
    onLeaveBack: (elements) => {
      gsap.to(elements, {
        opacity: 0,
        y: 50,
        stagger: -0.15,
        duration: 0.8
      });
    }
  });
</script>
